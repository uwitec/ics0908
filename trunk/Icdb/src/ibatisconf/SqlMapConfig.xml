<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
	<!-- Always ensure to use the correct XML header as above! -->
<sqlMapConfig>
	<!--
		The properties (name=value) in the file specified here can be used
		placeholders in this config file (e.g. “${driver}”. The file is
		relative to the classpath and is completely optional.
	-->
	<properties resource="ibatisconf/jdbc_config_mysql.properties" />
	<!--
		These settings control SqlMap configuration details, primarily to do
		with transaction management. They are all optional (see the Developer
		Guide for more).
	-->
	<settings cacheModelsEnabled="true" enhancementEnabled="true"
		lazyLoadingEnabled="true" maxRequests="32" maxSessions="10"
		maxTransactions="5" useStatementNamespaces="false" />
	<!--
		Configure a datasource to use with this SQL Map using
		SimpleDataSource. Notice the use of the properties from the above
		resource
	-->
	<transactionManager type="JDBC">
		<dataSource type="SIMPLE">
			<property name="JDBC.Driver" value="${driver}" />
			<property name="JDBC.ConnectionURL" value="${url}" />
			<property name="JDBC.Username" value="${username}" />
			<property name="JDBC.Password" value="${password}" />
		</dataSource>
	</transactionManager>
	<!--
		Identify all SQL Map XML files to be loaded by this SQL map. Notice
		the paths are relative to the classpath. For now, we only have one…
	-->
	<sqlMap resource="com/mydomain/data/baseset/Account.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Bank.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Struct.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/UnitType.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Person.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Department.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Unit.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Job.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Supplier.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Employee.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Storehouse.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/CargoSpace.xml"/>
	<sqlMap resource="com/mydomain/data/storage/Common.xml"/>
	<sqlMap resource="com/mydomain/data/storage/StockInCheckOrder.xml"/>
	<sqlMap resource="com/mydomain/data/storage/StockInCheckMateriel.xml"/>
	<sqlMap resource="com/mydomain/data/baseset/Materiel.xml"/>
	<sqlMap resource="com/mydomain/data/storage/Materiel.xml"/>
	<sqlMap resource="com/mydomain/data/report/ABCReport.xml"/>
	<sqlMap resource="com/mydomain/data/report/CheckStockList.xml"/>
	<sqlMap resource="com/mydomain/data/storage/StockStart.xml"/>
	<sqlMap resource="com/mydomain/data/storage/WasMateriel.xml"/>
	<sqlMap resource="com/mydomain/data/storage/WasTage.xml"/>
