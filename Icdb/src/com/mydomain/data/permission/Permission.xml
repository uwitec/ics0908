<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Permission">

    <update id="updateJobPermission" parameterClass="com.mydomain.bean.baseset.JobBean">
        UPDATE JOB
        SET
        PERMISSIONCODE=#permissionCode#
        WHERE JOBCODE=#jobCode#
    </update>
    <update id="updateEmployeePermission" parameterClass="com.mydomain.bean.baseset.EmployeeBean">
        UPDATE EMPLOYEE
        SET
        PERMISSIONCODE=#permissionCode#
        WHERE EMPLOYEECODE=#employeeCode#
    </update>
</sqlMap>